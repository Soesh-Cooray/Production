{
  "version": 2,
  "builds": [
    {
      "src": "personal_budget_manager/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12"
      }
    },
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "personal_budget_manager/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "personal_budget_manager.settings_production",
    "PYTHON_VERSION": "3.12"
  }
} 